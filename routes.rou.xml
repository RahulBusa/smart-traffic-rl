<routes>

    <vType id="car" accel="2.0" decel="6.0" length="4.5" maxSpeed="20" guiShape="passenger"/>

    <!-- Define route for every direction -->
    <route id="N_S" edges="NtoC CtoS"/>
    <route id="N_W" edges="NtoC CtoW"/>
    <route id="N_E" edges="NtoC CtoE"/>

    <route id="S_N" edges="StoC CtoN"/>
    <route id="S_E" edges="StoC CtoE"/>
    <route id="S_W" edges="StoC CtoW"/>

    <route id="E_W" edges="EtoC CtoW"/>
    <route id="E_N" edges="EtoC CtoN"/>
    <route id="E_S" edges="EtoC CtoS"/>

    <route id="W_E" edges="WtoC CtoE"/>
    <route id="W_N" edges="WtoC CtoN"/>
    <route id="W_S" edges="WtoC CtoS"/>

    <!-- Traffic flows -->
    <flow id="f1" type="car" route="N_S" begin="0" end="500" vehsPerHour="900"/>
    <flow id="f2" type="car" route="N_W" begin="0" end="500" vehsPerHour="600"/>
    <flow id="f3" type="car" route="N_E" begin="0" end="500" vehsPerHour="500"/>

    <flow id="f4" type="car" route="S_N" begin="0" end="500" vehsPerHour="1000"/>
    <flow id="f5" type="car" route="S_E" begin="0" end="500" vehsPerHour="700"/>
    <flow id="f6" type="car" route="S_W" begin="0" end="500" vehsPerHour="600"/>

    <flow id="f7" type="car" route="E_W" begin="0" end="500" vehsPerHour="1200"/>
    <flow id="f8" type="car" route="E_N" begin="0" end="500" vehsPerHour="600"/>
    <flow id="f9" type="car" route="E_S" begin="0" end="500" vehsPerHour="500"/>

    <flow id="f10" type="car" route="W_E" begin="0" end="500" vehsPerHour="1300"/>
    <flow id="f11" type="car" route="W_N" begin="0" end="500" vehsPerHour="700"/>
    <flow id="f12" type="car" route="W_S" begin="0" end="500" vehsPerHour="500"/>

</routes>
